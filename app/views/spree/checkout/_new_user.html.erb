<div class="col-sm-6">
  <div id="new-customer" data-hook="login" class="login-wrap">

    <h2 class="section-title no-margin size-18">
      <%= Spree.t :create_a_new_account %>
    </h2>


    <%= form_for @user,
      :as => :spree_user,
      :url => spree.registration_path(@user),
      :html => {class:"register-form row space-top-15"} do |f|
      %>

      <div data-hook="signup_inside_form">

        <%= render :partial => 'spree/shared/user_form',
          :locals => { :f => f }
          %>

        <div class="form-group col-md-12">
          <%= f.button Spree.t(:create),
            :class => 'theme-btn btn submit-btn btn-block',
            :type => 'submit'
            %>
        </div>

        <div class="form-group col-md-12">
          <label class="forgot-pw size-13">
            <%= Spree.t(:or) %>
            <%= link_to Spree.t(:login_as_existing),
              spree.login_path,
              class:'blue-color pw'
              %>
          </label>
          <div data-hook="login_extras"></div>
        </div>

      </div>
    <% end %>
  </div>
</div>
