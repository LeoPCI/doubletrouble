- content_for	:breadcrumb_title do
	= Spree.t :editing_user

.col-md-8.col-md-offset-2

	= render :partial => 'spree/shared/error_messages',
		:locals => { :target => @user }

	= form_for Spree::User.new,
		:as => @user,
		:url => spree.user_path(@user),
		:html => {:class=>'form row'},
		:method => :put do |f|

		= render :partial => 'spree/shared/user_form',
			:locals => { :f => f }

		%fieldset.form-group.col-xs-12
			= f.submit Spree.t(:update),
				:class => 'btn btn-block theme-btn-1'
